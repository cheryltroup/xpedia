<h1>All Wikis</h1>

<% if policy(Wiki.new).create? %>
<%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
<% end %>

<% @wikis.each do |wiki| %>
  <% if policy(wiki).show? %>
  <div class="media">
     <div class="media-body">
       <h4 class="media-heading">
         <%= link_to (markdown_to_html wiki.title), wiki %>
       </h4>
     </div>
   </div>
<% end %>
<% end %>